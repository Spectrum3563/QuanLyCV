@model IEnumerable<QuanLyCV.Models.EmployeeCV>

<h2>Danh sách CV</h2>
<a asp-action="Create" class="btn btn-primary">Thêm CV mới</a>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Tuổi</th>
            <th>Số điện thoại</th>
            <th>Bằng cấp</th>
            <th>Chứng chỉ</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Degree</td>
                <td>@item.Certifications</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
